.index
  position relative
  display flex
  flex-direction column
  padding 113px 0 8px
  gap 144px
  overflow hidden

  @media $tablet-landscape-large
    padding 112px 0 8px

  @media $tablet-landscape-medium
    padding 56px 0 8px
    gap 72px

  & > svg
    position absolute
    top 16px
    right -380px
    display block
    width 1093px
    height 1170px
    opacity .5
    stroke $green-ease

    @media $tablet-landscape-large
      top 48px
      right -391px

    @media $tablet-landscape-medium
      top 5px
      right -224px
      width 588px
      height 631px

    @media $phone
      top 137px
      right -248px

  &__catalogue-preview
    position relative
    z-index 1

  &__partners
    @media $tablet-landscape-large
      margin 1px 0 0
