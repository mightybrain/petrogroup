.project
  display flex
  flex-direction column
  padding 80px 0 8px
  gap 116px

  @media $tablet-landscape-medium
    padding 40px 0 8px
    gap 56px

  &__steps
    margin -36px 0 0

    @media $tablet-landscape-medium
      margin 0

    &-container
      width calc(100% - 80px)
      max-width 1600px

      @media $tablet-landscape-medium
        width 100%

  &__features
    @media $tablet-landscape-medium
      margin -13px 0 0

    &-container
      @media $tablet-landscape-medium
        width calc(100% - 80px)

      @media $phone
        width calc(100% - 32px)

  &__benefits
    &-container
      width 100%

  &__partners
    &-container
      @media $tablet-landscape-medium
        width calc(100% - 80px)

      @media $phone
        width calc(100% - 32px)