.catalogue
  display flex
  flex-direction column
  padding 112px 0 8px
  gap 112px

  @media $tablet-landscape-medium
    padding 56px 0 8px
    gap 56px

  &__intro-container,
  &__container
    max-width 1600px
    width calc(100% - 80px)

  &__inner
    display flex
    flex-direction column
    gap 112px

  &__groups
    display flex
    flex-direction column
    gap 80px

  &__group
    display flex
    flex-direction column
    gap 40px

    @media $tablet-landscape-medium
      gap 32px

    &-heading
      color $graphite

  &__list
    display grid
    grid-template-columns repeat(2, 1fr)
    gap 12px

  &__benefits
    margin 4px 0 0

    &-container
      width calc(100% - 80px)

  &__faq
    @media $tablet-landscape-large
      margin 32px 0 0