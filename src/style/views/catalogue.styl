.catalogue
  display flex
  flex-direction column
  padding 112px 0 8px
  gap 112px

  @media $tablet-landscape-medium
    padding 56px 0 8px
    gap 56px

  &__intro-container,
  &__container
    max-width 1600px
    width calc(100% - 80px)

    @media $phone
      width calc(100% - 32px)

  &__inner
    display flex
    flex-direction column
    gap 112px

  &__group
    display flex
    flex-direction column
    gap 40px

    @media $tablet-landscape-medium
      gap 32px

    &-heading
      color $graphite

  &__list
    display grid
    grid-template-columns repeat(2, 1fr)
    width 100%
    gap 12px

    @media $phone
      grid-template-columns 100%

  &__benefits
    margin 4px 0 0

    &-container
      width 100%

  &__faq
    @media $tablet-landscape-large
      margin 32px 0 0

    @media $tablet-landscape-medium
      margin 16px 0 0

.catalogue
  & .tabs__list
    @media $tablet-landscape-medium
      width 100%

  & .tabs__item
    @media $tablet-landscape-medium
      flex-grow 1

  & .tabs__btn
    min-width 388px

    @media $tablet-landscape-medium
      width 100%
      min-width auto