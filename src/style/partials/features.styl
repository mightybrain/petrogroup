.features
  &__list
    display grid
    grid-template-columns repeat(2, 1fr)
    gap 8px

  &__item
    &-image
      display block
      width 100%
      height 100%
      min-height 688px
      object-fit cover
      object-position center
      border-radius 16px

    &-info
      display flex
      flex-direction column
      align-items center
      height 100%
      padding 80px 24px
      gap 39px
      border-radius 16px
      background-color alpha($gray-soft, .6)

    &-heading,
    &-description
      width 100%
      max-width 652px
