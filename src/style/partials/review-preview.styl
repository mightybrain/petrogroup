.review-preview
	display flex
	align-items flex-start
	padding 4px
	gap 24px
	background-color $white
	border-radius 16px

	@media $tablet-landscape-medium
		flex-direction column
		padding 16px
		gap 12px

	&__image
		display block
		width 240px
		border-radius 12px

		@media $tablet-landscape-medium
			width 80px

	&__info
		display flex
		flex-direction column
		padding 15px 12px 16px 0
		gap 12px

	&__heading
		color $graphite

	&__position
		color $gray-deep