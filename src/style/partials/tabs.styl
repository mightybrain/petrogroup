.tabs
  display flex
  flex-direction column
  align-items flex-start
  gap 80px

  &__list
    display flex
    padding 2px
    gap 2px
    border 2px solid $white
    border-radius 16px
    background-color $gray-soft

  &__btn
    display flex
    flex-direction row-reverse
    justify-content center
    align-items center
    min-width 388px
    padding 12px
    gap 12px
    font-size 22px
    line-height 29px
    font-weight 400
    color $graphite
    border-radius 12px
    background-color $gray-soft
    cursor pointer
    transition background-color .5s 0s ease, color .5s 0s ease

    &:hover,
    &_active
      color $green
      background-color $white

    &-icon
      & svg
        display block
        width 40px
        height 40px
        stroke-width 2px
        stroke $graphite

.tabs_sidebar
  position relative
  flex-direction row
  gap 24px

  & .tabs__list
    position sticky
    top 0
    left 0
    flex-direction column
    flex-shrink 0
    width 382px

  & .tabs__btn
    justify-content flex-end
    width 100%
    min-width auto

.tabs__btn
  &:hover,
  &_active

  & .tabs__btn-icon
    & svg
      stroke $green
