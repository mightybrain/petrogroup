.tabs
  display flex
  flex-direction column
  align-items flex-start
  gap 80px

  &__list
    display flex
    padding 2px
    gap 2px
    border 2px solid $white
    border-radius 16px
    background-color $gray-soft

  &__btn
    display flex
    flex-direction row-reverse
    justify-content center
    align-items center
    min-width 388px
    padding 12px
    gap 12px
    color $graphite
    border-radius 12px
    background-color $gray-soft
    cursor pointer
    transition background-color .5s 0s ease, color .5s 0s ease

    &:hover,
    &_active
      color $green
      background-color $white

    &-icon
      & svg
        display block
        width 40px
        height 40px
        stroke-width 2px
        stroke $graphite

.tabs__btn
  &:hover,
  &_active

  & .tabs__btn-icon
    & svg
      stroke $green
