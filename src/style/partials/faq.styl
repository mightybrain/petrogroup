.faq
  padding 80px 16px
  border-radius 16px
  background-image url("../images/decor-03.jpg")
  background-size cover

  &__inner
    display flex
    align-items flex-end
    justify-content space-between
    max-width 1600px
    margin 0 auto

    @media $tablet-landscape-medium
      flex-direction column
      align-items center
      gap 32px

  &__ask-question
    display flex
    flex-direction column
    width calc(50% - 12px)
    max-width 513px
    margin -92px 0 0

    @media $tablet-landscape-medium
      width 100%
      max-width none
      margin 0

    &-decor-image
      display block
      width 100%
      max-width 496px

      @media $tablet-landscape-medium
        margin 0 auto

    &-inner
      position relative
      display flex
      flex-direction column
      align-items flex-start
      margin -79px 0 0
      padding 29px 24px 24px
      gap 11px
      background-color $green
      border-radius 16px
      overflow hidden

      & > svg
        position absolute
        top -205px
        right -186px
        display block
        width 455px
        height 487px
        opacity .1
        stroke $green-ease

    &-heading,
    &-description
      position relative
      color $white

    &-heading
      display flex
      justify-content space-between
      width 100%
      gap 16px

      & svg
        display block
        width 40px
        height 40px
        margin -5px 0 0
        stroke-width 2px
        stroke $green-poison

    &-btn
      position relative
      margin 10px 0 0

  &__questions
    display flex
    flex-direction column
    width calc(50% - 12px)
    gap 40px

    @media $tablet-landscape-medium
      width 100%

  &__heading
    color $white

  &__list
    display flex
    flex-direction column
    gap 8px

.faq-item
  padding 16px 24px 20px
  background-color $white
  border-radius 8px

  &__summary
    display flex
    justify-content space-between
    width 100%
    gap 16px
    text-align left
    cursor pointer

    &::after
      content ""
      flex-shrink 0
      display block
      width 44px
      height 44px
      border-radius 50%
      background-image url("data:image/svg+xml,%3Csvg viewBox='0 0 44 44' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 22C0 9.84974 9.84974 0 22 0V0C34.1503 0 44 9.84974 44 22V22C44 34.1503 34.1503 44 22 44V44C9.84974 44 0 34.1503 0 22V22Z' fill='%23E6E9E8' fill-opacity='0.6'/%3E%3Cpath d='M22 16V28M22 28L28 22M22 28L16 22' stroke='%23454545' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E")
      background-size contain
      background-repeat no-repeat

  &__heading
    display inline-flex
    align-items center
    min-height 44px

  &__description-wrapper
    height 0
    overflow hidden
    transition height .5s 0s ease

  &__description
    padding 16px 0 0
    color $asphalt