.shipping
  position relative
  display flex
  flex-direction column

  &__map
    position absolute
    top -244px
    left -378px
    display block
    width 1684px

    @media $tablet-landscape-medium
      top 50%
      left 50%
      transform translate(0, 0)
      transition transform .5s 0s ease

    & > svg
      width 100%
      height min-content

      & path
        stroke-width 2px
        stroke alpha($white, 0)
        transition stroke .5s 0s ease

  &__pin
    position absolute
    transform translate(-12px, -13px)

    &[data-country=russia]
      top 34%
      left 74%

    &[data-country=morocco]
      top 57%
      left 45%

    &[data-country=thailand]
      top 64%
      left 75%

    &[data-country=armenia]
      top 52%
      left 59%

    &[data-country=azerbaijan]
      top 52%
      left 60%

    &[data-country=china]
      top 55%
      left 75%

    &[data-country=iran]
      top 56%
      left 62%

    &[data-country=italy]
      top 50%
      left 51%

    & > svg
      display block
      width 24px
      height min-content

      & .outer-pin
        fill $white
        transition fill .5s 0s ease

      & .inner-pin
        fill $orange
        transition fill .5s 0s ease

    &:hover
      & > svg
        & .outer-pin
          fill $orange

        & .inner-pin
          fill $white

    &-popover
      position absolute
      bottom calc(150% + 2px)
      right 150%
      padding 8px
      border-radius 8px
      background-color $white
      box-shadow 0 16px 32px -4px alpha($black, .1)
      pointer-events none
      opacity 0
      transition opacity .5s 0s ease

      @media $tablet-landscape-medium
        display none

    &-label
      display block
      font-size 16px
      line-height 24px
      font-weight 400
      color $green

    &-value
      font-family $stlz
      font-size 40px
      line-height 44px
      font-weight 400
      color $graphite
      white-space nowrap

      & span:not([class])
        margin 0 0 0 4px
        font-family $mbp
        font-size 13px
        line-height 16px
        font-weight 400
        color $graphite

  &__heading
    position relative
    max-width 406px

    @media $tablet-landscape-medium
      max-width 240px

  &__countries
    @media $tablet-landscape-medium
      display none

    &-slider
      position relative
      align-self flex-end
      margin -34px 0 0

      @media $tablet-landscape-large
        margin -1px 0 0

      @media $tablet-landscape-medium
        align-self center
        width 160px
        margin 0
        overflow visible

    &-list
      display grid
      grid-template-columns repeat(2, 1fr)
      height auto
      gap 8px

      @media $tablet-landscape-medium
        display flex
        gap 0

    &-item
      @media $tablet-landscape-medium
        padding 377px 0 0

    &-btn
      display flex
      flex-direction row-reverse
      justify-content flex-end
      align-items center
      min-width 187px
      padding 8px
      gap 12px
      font-size 13px
      line-height 16px
      font-weight 400
      color $graphite
      border-radius 8px
      background-color $white
      box-shadow 0 0 0 0 alpha($black, 0)
      transition box-shadow .5s 0s ease

      @media $tablet-landscape-medium
        width 100%
        min-width auto

      &:hover
        box-shadow 0 16px 32px -4px alpha($black, .1)

    &-flag
      display block
      width 50px

