.counter
  position relative
  display flex
  align-items center
  min-height 480px
  padding 80px 40px
  background-color $black
  border-radius 16px
  overflow hidden

  @media $tablet-landscape-medium
    min-height 229px
    padding 40px

  @media $phone
    padding 81px 24px

  &__image
    position absolute
    top 0
    left 0
    display block
    width 100%
    height 100%
    object-fit cover
    object-position center
    opacity .6

  &__info
    position relative
    display grid
    grid-template-columns repeat(2, 1fr)
    align-items center
    max-width 1600px
    margin 0 auto
    gap 24px

    @media $phone
      grid-template-columns 100%
      gap 22px

  &__heading
    color $white

    @media $tablet-landscape-medium
      font-size 60px
      line-height 57px

    @media $phone
      font-size 50px
      line-height 55px

  &__description
    color $white

    @media $tablet-landscape-medium
      font-size 18px
      line-height 23px