.counter
  position relative
  display flex
  align-items center
  min-height 480px
  padding 80px 40px
  background-color $black
  border-radius 16px
  overflow hidden

  &__image
    position absolute
    top 0
    left 0
    display block
    width 100%
    height 100%
    object-fit cover
    object-position center
    opacity .6

  &__info
    position relative
    display grid
    grid-template-columns repeat(2, 1fr)
    align-items center
    max-width 1600px
    margin 0 auto
    gap 24px

  &__heading
    color $white

  &__description
    color $white