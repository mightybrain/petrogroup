.steps
  display flex
  flex-direction column
  gap 80px

  @media $tablet-landscape-large
    gap 82px

  &__heading
    color $graphite

  &__list
    display grid
    align-items start
    gap 8px

    &_cols-4
      grid-template-columns repeat(4, 1fr)

  &__item
    display flex
    flex-direction column
    min-height 340px
    padding 16px 24px 24px
    gap 17px
    background-color $white
    border-radius 16px

    @media $tablet-landscape-large
      padding 17px 24px 24px
      gap 25px

    &:nth-child(2)
      margin 40px 0 0

    &:nth-child(3)
      margin 80px 0 0

    &:nth-child(4)
      margin 120px 0 0

    &-description
      margin -5px 0 0

      @media $tablet-landscape-large
        margin -13px 0 0

  &__index
    font-size 100px
    line-height 90px
    font-weight 400
    color $green

    @media $tablet-landscape-large
      font-size 90px
      line-height 81px
