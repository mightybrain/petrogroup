.steps
  display flex
  flex-direction column
  gap 80px

  &__heading
    color $graphite

  &__list
    display grid
    align-items start
    gap 8px

    &_cols-4
      grid-template-columns repeat(4, 1fr)

  &__item
    display flex
    flex-direction column
    min-height 340px
    padding 24px
    gap 12px
    background-color $white
    border-radius 16px

    &:nth-child(2)
      margin 40px 0 0

    &:nth-child(3)
      margin 80px 0 0

    &:nth-child(4)
      margin 120px 0 0

  &__index
    font-size 100px
    line-height 90px
    font-weight 400
    color $green
