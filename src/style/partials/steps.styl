.steps
  display flex
  flex-direction column
  gap 80px

  @media $tablet-landscape-large
    gap 82px

  @media $tablet-landscape-medium
    gap 32px

  &__heading
    color $graphite

    @media $tablet-landscape-medium
      padding 0 40px

    @media $phone
      padding 0 16px

  &__list-wrapper
    overflow-x auto
    -ms-overflow-style none
    scrollbar-width none

    &::-webkit-scrollbar
      display none

  &__list
    display grid
    align-items start
    gap 8px

    @media $tablet-landscape-medium
      display flex
      align-items unset
      padding 0 0 0 40px

    @media $phone
      padding 0 0 0 16px

    &_cols-4
      grid-template-columns repeat(4, 1fr)

      @media $tablet-landscape-medium
        display flex

    &::after
      content ''
      display none

      @media $tablet-landscape-medium
        flex-shrink 0
        display block
        width 32px

      @media $phone
        width 8px

  &__item
    display flex
    flex-direction column
    min-height 340px
    padding 16px 24px 24px
    gap 17px
    background-color $white
    border-radius 16px

    @media $tablet-landscape-large
      padding 17px 24px 38px
      gap 25px

    @media $tablet-landscape-medium
      flex-shrink 0
      width 296px
      min-height 300px
      gap 8px

    @media $phone
      padding 19px 24px 38px

    &:nth-child(2)
      margin 40px 0 0

      @media $tablet-landscape-medium
        margin 0

    &:nth-child(3)
      margin 80px 0 0

      @media $tablet-landscape-medium
        margin 0

    &:nth-child(4)
      margin 120px 0 0

      @media $tablet-landscape-medium
        margin 0

    &-description
      margin -5px 0 0

      @media $tablet-landscape-large
        margin -13px 0 0

      @media $tablet-landscape-medium
        margin 0

  &__index
    font-size 100px
    line-height 90px
    font-weight 400
    color $green

    @media $tablet-landscape-large
      font-size 90px
      line-height 81px

    @media $tablet-landscape-medium
      font-size 56px
      line-height 50px
