.faq-item
  padding 16px 24px 20px
  background-color $white
  border-radius 8px

  @media $tablet-landscape-medium
    padding 12px 10px

  &__summary
    display flex
    justify-content space-between
    width 100%
    gap 16px
    text-align left
    cursor pointer

    &::after
      content ""
      transform rotate(0)
      flex-shrink 0
      display block
      width 44px
      height 44px
      border-radius 50%
      background-image url("data:image/svg+xml,%3Csvg viewBox='0 0 44 44' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 22C0 9.84974 9.84974 0 22 0V0C34.1503 0 44 9.84974 44 22V22C44 34.1503 34.1503 44 22 44V44C9.84974 44 0 34.1503 0 22V22Z' fill='%23E6E9E8' fill-opacity='0.6'/%3E%3Cpath d='M22 16V28M22 28L28 22M22 28L16 22' stroke='%23454545' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E")
      background-size contain
      background-repeat no-repeat
      transition transform .5s 0s ease

      @media $tablet-landscape-medium
        width 40px
        height 40px
        background-size 44px 44px
        background-position center

  &__heading
    display inline-flex
    align-items center
    min-height 44px
    transition color .5s 0s ease

    @media $tablet-landscape-medium
      min-height 40px

    &:hover
      color $green

  &__description-wrapper
    height 0
    overflow hidden
    transition height .5s 0s ease

  &__description
    padding 16px 0 0
    color $asphalt

    @media $tablet-landscape-medium
      padding 12px 0 0

.faq-item_opened
  & .faq-item__summary
    &::after
      transform rotate(180deg)

  & .faq-item__heading
    color $green