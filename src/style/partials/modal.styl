.modal
  position fixed
  top 0
  left 0
  display flex
  justify-content center
  width 100%
  height 100%
  padding 24px 0
  overflow auto
  opacity 1
  visibility visible
  transition opacity .5s 0s ease
  -ms-overflow-style none
  scrollbar-width none

  &::-webkit-scrollbar
    display none

  &[hidden]
    visibility hidden
    opacity 0
    transition opacity .5s 0s ease, visibility 0s .5s ease

  &__overlay
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background-color alpha($black, .5)

  &__inner
    position relative
    max-width 796px
    height fit-content
    padding 80px
    background-color $white
    border-radius 16px

  &__close-btn
    position absolute
    top 32px
    right 32px
    display flex
    justify-content center
    align-items center
    width 40px
    height 40px
    border-radius 50%
    background-color alpha($gray-soft, .6)
    cursor pointer

    & svg
      display block
      width 16px
      height 16px
      stroke-width 2px
      stroke $asphalt

body.modal-opened
  overflow hidden