.modal
  position fixed
  top 0
  left 0
  z-index 3
  display flex
  justify-content center
  width 100%
  height 100%
  padding 24px 0
  overflow auto
  opacity 1
  visibility visible
  transition opacity .5s 0s ease
  -ms-overflow-style none
  scrollbar-width none

  @media $tablet-portrait-large
    padding 0

  &::-webkit-scrollbar
    display none

  &[hidden]
    visibility hidden
    opacity 0
    transition opacity .5s 0s ease, visibility 0s .5s ease

  &__overlay
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background-color alpha($black, .5)

  &__inner
    position relative
    width 100%
    max-width 796px
    height fit-content
    padding 80px
    background-color $white
    border-radius 16px
    box-shadow 0 16px 32px -4px alpha($black, .1)

    @media $tablet-portrait-large
      padding 56px 40px 80px
      border-radius 0

    @media $phone
      padding 56px 16px 80px

  &__close-btn
    position absolute
    top 32px
    right 32px
    transform rotate(0)
    display flex
    justify-content center
    align-items center
    width 40px
    height 40px
    border-radius 50%
    background-color alpha($gray-soft, .6)
    cursor pointer
    transition transform .5s 0s ease

    @media $tablet-portrait-large
      top 16px
      right 16px

    &:hover
      transform rotate(90deg)

    & svg
      display block
      width 16px
      height 16px
      stroke-width 2px
      stroke $asphalt

body.modal-opened
  overflow hidden