.benefits
  position relative
  padding 80px 16px
  border-radius 16px
  background-image url("../images/decor-02.jpg")
  background-size cover

  &_no-bg
    padding 0
    background none

  &__inner
    display flex
    flex-direction column
    max-width 1600px
    margin 0 auto
    gap 80px

  &__heading
    width calc(50% - 4px)
    color $white

  &__list
    display grid
    grid-template-columns repeat(4, 1fr)
    gap 8px

  &__item
    display flex
    flex-direction column
    min-height 276px
    padding 24px
    gap 12px
    border-radius 16px
    background-color rgba(255, 255, 255, .9)

  &__icon
    & svg
      display block
      width 40px
      height 40px
      stroke-width 2px
      stroke $green

  &__label
    color $green

.benefits_no-bg
  & .benefits__inner
    padding 116px 0 0
    border-top 1px solid $gray-light

  & .benefits__heading
    color $graphite
