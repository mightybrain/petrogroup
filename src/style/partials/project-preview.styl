.project-preview
  display block
  padding 4px
  border-radius 16px
  background-color $white
  text-decoration none

  &__image
    display block
    width 100%
    border-radius 12px

  &__info
    display flex
    flex-direction column
    padding 20px 16px 16px
    gap 8px

  &__tags
    display flex
    flex-wrap wrap

  &__tag
    padding 4px 8px
    font-size 16px
    line-height 24px
    font-weight 400
    color $asphalt
    border-radius 4px
    background-color alpha($gray-soft, .6)

  &__heading
    color $asphalt