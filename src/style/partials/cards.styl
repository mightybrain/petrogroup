.cards
  display flex
  flex-wrap wrap
  justify-content space-between
  align-items flex-end
  row-gap 80px

  &__heading
    width calc(50% - 4px)
    color $graphite

  &__description
    width calc(50% - 4px)
    color $green

    & p:not([class])
      max-width 340px

  &__list
    display grid
    grid-template-columns repeat(2, 1fr)
    width 100%
    gap 8px

  &__item
    &-image
      display block
      width 100%
      height 100%
      min-height 688px
      object-fit cover
      object-position center
      border-radius 16px

    &-info
      display flex
      flex-direction column
      align-items center
      height 100%
      padding 81px 24px 80px
      gap 38px
      border-radius 16px
      background-color $white

    &-heading,
    &-description
      width 100%
      max-width 636px
