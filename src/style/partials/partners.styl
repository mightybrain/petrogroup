.partners
  display flex
  flex-direction column
  gap 40px

  @media $tablet-landscape-large
    gap 39px

  @media $tablet-landscape-medium
    gap 31px

  &__heading
    width 100%
    max-width 1648px
    margin 0 auto
    padding 0 24px
    color $graphite

    @media $tablet-landscape-medium
      padding 0
      font-size 32px
      line-height 35px

  &__list
    display grid
    grid-template-columns repeat(6, 1fr)
    gap 8px

    @media $tablet-landscape-medium
      grid-template-columns repeat(3, 1fr)

    @media $phone
      grid-template-columns repeat(2, 1fr)

  &__item
    display flex
    justify-content center
    padding 24px
    border-radius 12px
    background-color $gray-soft

    @media $tablet-landscape-large
      padding 24px 10px

    @media $tablet-landscape-medium
      padding 19px 40px

    @media $phone
      padding 19px 8px

  &__logo
    display block
    width 100%
    max-width 180px