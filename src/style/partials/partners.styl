.partners
  display flex
  flex-direction column
  gap 40px

  &__heading
    width 100%
    max-width 1600px
    margin 0 auto
    color $graphite

  &__list
    display grid
    grid-template-columns repeat(6, 1fr)
    gap 8px

    @media $tablet-landscape-medium
      grid-template-columns repeat(3, 1fr)

    @media $phone
      grid-template-columns repeat(2, 1fr)

  &__item
    display flex
    justify-content center
    padding 24px
    border-radius 12px
    background-color $gray-soft

  &__logo
    display block
    width 100%
    max-width 180px