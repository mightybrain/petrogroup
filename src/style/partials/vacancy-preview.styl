.vacancy-preview
  display flex
  padding 4px
  gap 40px
  background-color $white
  border-radius 16px

  @media $tablet-landscape-medium
    position relative
    flex-direction column
    padding 244px 4px 4px

  &__info
    display flex
    flex-direction column
    padding 25px 24px 24px
    gap 14px

  &__heading
    color $graphite

  &__description
    margin 8px 0 0

  &__details
    display flex
    flex-direction column
    margin 2px 0 0
    gap 16px

    &-group
      display flex
      flex-direction column
      gap 8px

      &-heading
        color $graphite

    &-item
      position relative
      display flex
      padding 0 0 0 24px
      font-size 16px
      line-height 24px
      font-weight 400
      color $graphite

      @media $tablet-landscape-large
        font-size 15px
        line-height 23px

      &::before
        content ""
        position absolute
        top 11px
        left 11px
        display block
        width 2px
        height 2px
        background-color $graphite

  &__actions
    display flex
    flex-direction column
    gap 4px

  &__image
    display block
    width 377px
    border-radius 12px

    @media $tablet-landscape-medium
      position absolute
      top 4px
      left 4px
      width calc(100% - 8px)
      height 240px
      object-fit cover
      object-position center

  &__salary-and-cv-btn
    display flex
    flex-direction column
    align-items center
    padding 21px 24px 24px
    gap 15px
    border-radius 12px
    background-color alpha($gray-soft, .6)

  &__salary
    font-size 32px
    line-height 42px
    font-weight 400
    color $graphite
    text-align center

    @media $tablet-landscape-large
      font-size 28px
      line-height 36px

  &__cv-btn
    width 100%