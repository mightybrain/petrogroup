.index-intro
  display flex
  flex-direction column
  gap 42px

  &__info
    display flex
    flex-direction column
    gap 42px
    max-width 1600px
    margin 0 auto

  &__description
    display flex
    align-items center
    gap 150px

  &__decor-image
    display block
    width 256px

  &__demo
    position relative
    border-radius 16px
    overflow hidden

    &-video

      display block
      width 100%

  &__logo
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    display block
    width 100%
    max-width 651px