.index-intro
  position relative
  display flex
  flex-direction column
  gap 42px

  @media $tablet-landscape-large
    gap 40px

  @media $tablet-portrait-large
    gap 33px

  & > svg
    position absolute
    top -97px
    right -413px
    display block
    width 1093px
    height 1170px
    opacity .5
    stroke $green-ease

  &__info
    position relative
    display flex
    flex-direction column
    width 100%
    max-width 1648px
    margin 0 auto
    padding 0 24px
    gap 36px

    @media $tablet-landscape-large
      gap 35px

    @media $tablet-portrait-large
      padding 0
      gap 32px

  &__description
    display flex
    align-items center
    max-width 1220px
    gap 150px

    @media $tablet-landscape-large
      gap 50px

    @media $tablet-landscape-medium
      flex-direction column
      align-items flex-start
      gap 24px

    @media $tablet-portrait-large
      gap 23px
      font-size 18px
      line-height 23px

  &__decor-image
    display block
    width 256px
    margin 5px 0 0

    @media $tablet-landscape-medium
      width 156px
      margin 0

  &__demo
    position relative
    border-radius 16px
    overflow hidden

    &-video
      display block
      width 100%

  &__logo
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    display block
    width 100%
    max-width 651px

    @media $tablet-portrait-large
      max-width 228px