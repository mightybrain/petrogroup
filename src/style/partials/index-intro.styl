.index-intro
  display flex
  flex-direction column
  gap 42px

  &__info
    display flex
    flex-direction column
    gap 36px
    max-width 1600px
    margin 0 auto

  &__description
    display flex
    align-items center
    gap 150px

    @media $tablet-landscape-large
      gap 50px

    @media $tablet-landscape-medium
      flex-direction column
      align-items flex-start
      gap 24px

  &__decor-image
    display block
    width 256px
    margin 5px 0 0

    @media $tablet-landscape-medium
      width 156px
      margin 0

  &__demo
    position relative
    border-radius 16px
    overflow hidden

    &-video

      display block
      width 100%

  &__logo
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    display block
    width 100%
    max-width 651px