.common
  &__h1,
  &__h2,
  &__h3,
  &__h4,
  &__h5
    margin 0
    font-family $stlz
    font-weight 400
    color $green

  &__h1
    font-size 80px
    line-height 80px

    &_accent
      font-size 100px
      line-height 95px

  &__h2
    font-size 60px
    line-height 66px

  &__h3
    font-size 40px
    line-height 44px

  &__h4
    font-size 26px
    line-height 31px

  &__h5
    font-size 22px
    line-height 29px

  &__text
    margin 0
    font-size 16px
    line-height 24px
    font-weight 400
    color $graphite

    &_small
      font-size 13px
      line-height 16px

    &_medium
      font-size 22px
      line-height 29px

    &_large
      font-size 32px
      line-height 42px

    & p:not([class])
      margin 0

    & p:not([class]) + p:not([class])
      margin 29px 0 0

    & ul:not([class])
      display flex
      flex-direction column
      gap 24px

      & li:not([class])
        position relative
        padding 0 0 0 40px

        &::before
          content ''
          position absolute
          top 12px
          left 1px
          display block
          width 22px
          height 2px
          border-radius 1px
          background-color $green-poison

  &__btn
    display inline-block
    padding 10px 24px
    font-size 16px
    line-height 24px
    font-weight 400
    color $white
    border-radius 22px
    background-color $orange
    cursor pointer

    &_green
      background-color $green

    &_gray
      color $asphalt
      background-color alpha($gray-soft, .6)

    &_small
      padding 4px 16px
      border-radius 16px

  &__tag
    padding 4px 8px
    font-size 13px
    line-height 16px
    font-weight 400
    color $green-deep
    border-radius 4px
    background-color alpha($green-toxic, .3)
