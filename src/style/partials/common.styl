.common
  &__h1,
  &__h2,
  &__h3,
  &__h4,
  &__h5
    margin 0
    font-family $stlz
    font-weight 400
    color $green

  &__h1
    font-size 80px
    line-height 80px

  &__h2
    font-size 60px
    line-height 66px

  &__h3
    font-size 40px
    line-height 44px

  &__h4
    font-size 26px
    line-height 31px

  &__h5
    font-size 22px
    line-height 29px

  &__text
    margin 0
    font-size 16px
    line-height 24px
    font-weight 400
    color $graphite

    &_small
      font-size 13px
      line-height 16px

    &_medium
      font-size 22px
      line-height 29px

    &_large
      font-size 32px
      line-height 42px

    & p:not([class])
      margin 0

    & p:not([class]) + p:not([class])
      margin 24px 0 0

  &__btn
    padding 10px 24px
    font-size 16px
    line-height 24px
    font-weight 400
    color $white
    border-radius 22px
    background-color $orange

    &_green
      background-color $green

  &__tag
    padding 4px 8px
    font-size 13px
    line-height 16px
    font-weight 400
    color $green-deep
    border-radius 4px
    background-color alpha($green-toxic, .3)
