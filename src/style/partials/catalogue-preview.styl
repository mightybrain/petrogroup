.catalogue-preview
  display flex
  flex-wrap wrap
  justify-content space-between
  row-gap 83px

  &__heading,
  &__description
    width calc(50% - 12px)

  &__description
    margin -4px 0 0

  &__description-accent
    color $green

  &__list
    display grid
    grid-template-columns repeat(3, 1fr)
    gap 8px

  &__item
    position relative
    display flex
    flex-direction column
    justify-content space-between
    min-height 480px
    padding 24px
    gap 16px
    overflow hidden
    border-radius 16px

    &::after
      content ""
      position absolute
      top 0
      left 0
      display block
      width 100%
      height 100%
      background linear-gradient(transparent, alpha($black, .2))

  &__image
    position absolute
    top 0
    left 0
    display block
    width 100%
    height 100%
    object-fit cover
    object-position center

  &__label
    position relative
    z-index 1
    color $white

  &__kinds
    &-list
      position relative
      z-index 1
      display flex
      flex-wrap wrap
      gap 8px

    &-link
      display block
      padding 10px 24px
      font-size 16px
      line-height 24px
      font-weight 400
      color $white
      background-color $green
      border-radius 22px
      text-decoration none