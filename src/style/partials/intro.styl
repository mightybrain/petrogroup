.intro
	position relative
	padding 200px 16px 265px
	border-radius 16px
	overflow hidden
	background-color $black

	&_no-bg
		padding 0
		border-radius 0
		overflow visible
		background none

	&__image
		position absolute
		top 0
		left 0
		display block
		width 100%
		height 100%
		object-fit cover
		object-position center
		opacity .7

	&__inner
		position relative
		display flex
		justify-content space-between
		max-width 1600px
		margin 0 auto
		gap 24px

	&__heading
		color $white

	&__description
		display flex
		flex-direction column
		width calc(50% - 12px)
		margin 3px 0 0
		gap 8px
		color $white

		&::before
			content ""
			display block
			width 50px
			height 2px
			background-color $green-poison
			border-radius 1px

.intro_no-bg
	& .intro__heading
		color $green