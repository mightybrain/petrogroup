.header
  &__container
    max-width 1600px

  &__inner
    display grid
    grid-template-columns auto min-content min-content
    align-items center
    column-gap 24px
    row-gap 16px

    &_short
      display none
      padding 8px 8px 8px 16px
      border-radius 28px
      background-color $white
      box-shadow 0 16px 32px -4px alpha($black, .1)

      @media $tablet-landscape-medium
        display grid

    &_full
      @media $tablet-landscape-medium
        position fixed
        top 0
        left 0
        z-index 1
        display flex
        flex-direction column
        width 100%
        height 0
        padding 0 40px
        row-gap 24px
        overflow hidden
        background-color $gray-soft
        transition height .5s 0s ease

        &::before,
        &::after
          content ''
          flex-shrink 0
          display block
          height 72px

        &::before
          order -2

  &__credits
    display flex
    align-items center
    gap 24px

    @media $tablet-landscape-medium
      display none

  &__logo
    &-image
      display block
      width 170px

      @media $tablet-landscape-large
        width 142px

      @media $tablet-landscape-medium
        width 114px

  &__slogan
    max-width 426px
    color $gray-deep

  &__contact-us
    &-list
      display flex
      gap 16px

    &-link
      display flex
      justify-content center
      align-items center
      width 40px
      height 40px

      & svg
        display block
        width 24px
        height 24px
        stroke-width 2px
        stroke $graphite

  &__contacts
    @media $tablet-landscape-medium
      width 100%
      margin 16px 0 0

    &-list
      display flex
      align-items center
      gap 40px

      @media $tablet-landscape-medium
        flex-direction column
        gap 24px

    &-item
      display flex
      align-items center
      justify-content center
      gap 8px
      white-space nowrap

      @media $tablet-landscape-medium
        width 100%

      & svg
        display block
        width 24px
        height 24px
        stroke-width 2px
        stroke $graphite

      &:last-child
        @media $tablet-landscape-medium
          order -1

    &-link
      font-size 16px
      line-height 24px
      font-weight 400
      color $graphite
      text-decoration none

      @media $tablet-landscape-large
        font-size 15px
        line-height 23px

  &__burger
    position relative
    z-index 2
    width 40px
    height 40px
    border-radius 50%
    background-color alpha($gray-soft, .6)
    opacity 1
    pointer-events all
    cursor pointer
    transition opacity .5s 0s ease

    &::before,
    &::after
      content ''
      position absolute
      left 13px
      transform rotate(0)
      display block
      width 14px
      height 2px
      background-color $graphite
      border-radius 1px
      transition top .3s .3s ease, transform .3s 0s ease

    &::before
      top 14px
    
    &::after
      top 24px

    &-line
      position absolute
      top 19px
      left 13px
      display block
      width 14px
      height 2px
      background-color $graphite
      border-radius 1px
      opacity 1
      transition opacity 0s .3s ease

  &__lang
    position relative

    &-current
      display block
      padding 10px 12px
      font-size 16px
      line-height 24px
      font-weight 400
      color $graphite
      border-radius 22px
      background-color $gray-soft

      @media $tablet-landscape-large
        padding 9px 12px 8px
        font-size 15px
        line-height 23px
        border-radius 20px

      @media $tablet-landscape-medium
        padding 10px 16px 9px
        font-size 14px
        line-height 21px

    &-list-wrapper
      position absolute
      top calc(100% + 3px)
      right 0
      opacity 0
      visibility hidden
      transition opacity .5s 0s ease, visibility 0s .5s linear

      @media $tablet-landscape-medium
        position fixed
        top 0
        display flex
        align-items flex-end
        width 100%
        height 100%

      &::before
        content ""
        position absolute
        bottom 100%
        left 0
        display block
        width 100%
        height 3px

        @media $tablet-landscape-medium
          display none

    &-list-overlay
      display none

      @media $tablet-landscape-medium
        position absolute
        top 0
        left 0
        display block
        width 100%
        height 100%
        background-color alpha($black, .3)

    &-list
      padding 8px
      border-radius 8px
      background-color $white

      @media $tablet-landscape-medium
        position relative
        transform translateY(100%)
        width 100%
        padding 34px 40px 32px
        border-radius 16px 16px 0 0
        transition transform .5s 0s ease

      &::before
        content ''
        display none

        @media $tablet-landscape-medium
          position absolute
          top 16px
          left 50%
          transform translateX(-50%)
          display block
          width 36px
          height 2px
          border-radius 1px
          background-color $gray-light
    
    &-link
      display block
      padding 4px 12px
      font-size 16px
      line-height 24px
      font-weight 400
      color $graphite
      text-align center
      border-radius 4px
      text-decoration none
      background-color $white
      transition background-color .5s 0s ease, color .5s 0s ease

      @media $tablet-landscape-large
        font-size 15px
        line-height 23px

      @media $tablet-landscape-medium
        padding 10px 12px
        font-size 18px
        line-height 23px
        border-radius 8px

      &_active,
      &:hover
        color $green
        background-color alpha($gray-soft, .6)

      &_active
        pointer-events none

  &__bid-btn
    white-space nowrap

    @media $tablet-landscape-medium
      width 100%

  &__nav
    grid-column-start 1
    grid-column-end 4
    width 100%

    @media $tablet-landscape-medium
      order -1

    &-list
      display flex
      gap 12px

      @media $tablet-landscape-medium
        flex-direction column
        align-items center
        gap 8px

    &-item
      @media $tablet-landscape-medium
        width 100%

    &-link
      display block
      padding 4px 16px
      font-size 16px
      line-height 24px
      font-weight 400
      color $graphite
      text-align center
      background-color $white
      border-radius 16px
      text-decoration none

      @media $tablet-landscape-large
        padding 4px 16px
        font-size 15px
        line-height 23px
        border-radius 15.5px

      @media $tablet-landscape-medium
        padding 12px 16px
        font-size 14px
        line-height 21px
        border-radius 22.5px

.header__lang:hover
  & .header__lang-list-wrapper
    @media $desktop-only
      opacity 1
      visibility visible
      transition opacity .5s 0s ease, visibility 0s 0s linear

body.burger-opened
  @media $tablet-landscape-medium
    overflow hidden

  & .header__burger
    &::before,
    &::after
      top 19px
      transition top .3s 0s ease, transform .3s .3s ease

    &::before
      transform rotate(45deg)

    &::after
      transform rotate(-45deg)
    
    &-line
      opacity 0

  & .header__inner
    &_full
      @media $tablet-landscape-medium
        height 100%

body.lang-opened
  @media $tablet-landscape-medium
    overflow hidden

  & .header__lang-list-wrapper
    @media $tablet-landscape-medium
      opacity 1
      visibility visible
      transition opacity .5s 0s ease, visibility 0s 0s linear

  & .header__lang-list
    @media $tablet-landscape-medium
      transform translateY(0)

  & .header__burger
    @media $tablet-landscape-medium
      opacity 0
      pointer-events none
